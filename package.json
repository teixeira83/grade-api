{
  "name": "grade-api",
  "version": "1.0.0",
  "description": "Api responsável pela interface com dados cadastrais de bancos e usuários de bancos, e dados cadastrais de taxas dos bancos",
  "author": "Grupo Boticário",
  "private": true,
  "license": "private",
  "scripts": {
    "cron-update-duration-type": "node ./dist/cronjobs/updateDuration/index.js",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "generate": "nest g",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint . --ext .ts && prettier --check './src/**.*.ts'",
    "lint:fix": "eslint . --ext .ts --fix && prettier --write './src/**.*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:ci": "jest --coverage",
    "test:load:insertbulk": "node ./test/loadtest/populateDatabase.mjs",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --forceExit --detectOpenHandles --config ./test/jest-e2e.json",
    "doc": "npx @compodoc/compodoc -p tsconfig.json",
    "doc:serve": "npm run doc && npx @compodoc/compodoc -s",
    "prettier:write": "prettier --write ./**/*.{ts,js,json}"
  },
  "dependencies": {
    "@fastify/request-context": "^4.2.0",
    "@golevelup/ts-jest": "^0.3.4",
    "@nestjs/axios": "^1.0.1",
    "@nestjs/common": "^8.4.7",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^7.6.5",
    "@nestjs/mapped-types": "^1.2.0",
    "@nestjs/mongoose": "^9.2.1",
    "@nestjs/platform-fastify": "^7.6.5",
    "@nestjs/swagger": "^4.7.9",
    "@nestjs/terminus": "^7.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cross-spawn": "^7.0.3",
    "dotenv-expand": "^10.0.0",
    "fastify": "^3.29.4",
    "fastify-swagger": "^5.2.0",
    "jest-mock-extended": "^3.0.1",
    "markdown-it": "^13.0.1",
    "mongoose": "^7.0.0",
    "newrelic": "^9.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.1.1",
    "rxjs": "^7.8.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.0.0",
    "@compodoc/compodoc": "^1.1.19",
    "@golevelup/nestjs-testing": "^0.1.2",
    "@nestjs/cli": "^9.1.5",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^8.4.5",
    "@types/cli-color": "^2.0.2",
    "@types/cross-spawn": "^6.0.2",
    "@types/image-to-base64": "^2.1.0",
    "@types/jest": "^27.5.1",
    "@types/lodash": "^4.14.182",
    "@types/luxon": "^3.0.1",
    "@types/newrelic": "^9.4.0",
    "@types/node": "^18.11.17",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "commitizen": "^4.3.0",
    "eslint": "^8.32.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sonarjs": "^0.17.0",
    "is-ci": "^3.0.1",
    "jest": "^27.5.1",
    "lint-staged": "^13.1.0",
    "node-mocks-http": "^1.12.1",
    "prettier": "^2.8.3",
    "supertest": "^6.3.3",
    "ts-jest": "^27.1.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.4"
  },
  "jest": {
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "type": "commonjs"
}
